@using GroanZone.ViewModels

@model JokeViewModel
@{
  ViewData["Title"] = "Confirm Delete?!";
  var joke = Model;
}

<h1>Are you sure you want to delete this joke?</h1>
<h2>This action cannot be undone...</h2>

<form asp-controller="Jokes" asp-action="DeleteJoke" asp-route-id="@joke.Id" method="post">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="Id" />

  <a href="/jokes" class="btn btn-outline-danger">Cancel / Back to list</a>
  <button type="submit" class="btn btn-danger">Delete Joke!</button>
</form>